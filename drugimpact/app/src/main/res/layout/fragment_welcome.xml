<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.caesarlegion.drugimpact.MainActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_welcome_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_recent_activity2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="@string/welcome_words_of_advice"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.15"
            android:gravity="left|clip_vertical"
            android:paddingLeft="24dp"
            android:text="@string/welcome_rules_set"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.5"
            android:gravity="left|clip_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/welcome_rules_def_set"
            android:textAlignment="center"
            android:textColor="@color/main_theme_secondary2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.15"
            android:gravity="left|clip_vertical"
            android:paddingLeft="24dp"
            android:text="@string/welcome_rules_setting"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.5"
            android:gravity="left|clip_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/welcome_rules_def_setting"
            android:textAlignment="center"
            android:textColor="@color/main_theme_secondary2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.15"
            android:gravity="left|clip_vertical"
            android:paddingLeft="24dp"
            android:text="@string/welcome_rules_substance"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.5"
            android:gravity="left|clip_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/welcome_rules_def_substance"
            android:textAlignment="center"
            android:textColor="@color/main_theme_secondary2"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>